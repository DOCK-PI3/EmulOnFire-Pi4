<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  <include>./animatedbackgroundsubset.xml</include>
  <view name="system">
    <video name="videobox" extra="true">
      <path>./art/sitemasvideos/${system.name}.mp4</path>
      <delay>0.2</delay>
	  <size>0.32 0.37</size>
      <origin>0 0</origin>
	  <!-- <pos>0.342 0.075</pos> -->
	  <color>FFFFFFFF</color>
      <effect>none</effect>
      <roundCorners>0.15</roundCorners>
      <visible>true</visible>
		<zIndex>61</zIndex>
    </video>
	<!-- efecto de degradado -->
    <image name="CenterFade" extra="true">
      <tile>false</tile>
      <size>0.40 1</size>
      <pos>0.2 1</pos>
      <origin>1 1</origin>
      <path>./art/centerfade_v.png</path>
      <color>${centerFadeColor}</color>
      <zIndex>22</zIndex>
    </image>

    <image name="ControllerOverlay" extra="true">
      <visible>false</visible>
    </image>
  </view>
</theme>
